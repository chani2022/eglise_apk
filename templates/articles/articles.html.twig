{% extends 'base.html.twig' %}

{% block title %}Apokalpsy -
	{{ type }}
{% endblock %}
{% block stylesheets %}
	{{parent()}}
	<style>
		.loading {
			display: flex;
			align-items: center;
			justify-content: center;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="breadcrumb-row">
		<div class="container">
			<ul class="list-inline">
				<li>
					<a href="#">{% trans %}Home{% endtrans %}
					</a>
				</li>
				<li>{{ type|trans }}</li>
			</ul>
		</div>
	</div>


	<!-- Content -->
	<div
		class="page-content bg-white">
		<!-- contact area -->
		<div class="content-block">
			<div class="section-area section-sp1">
				<div class="container">
					<div
						class="row">
						<!-- Left part start -->
						<div class="col-lg-12" id="container" data-type="{{ type }}"></div>
						<div class="loading">
							<img src="{{ asset ('assets/images/spinner/spinner.gif') }}" class="spinner" alt="spinner"/>
						</div>
						<!-- Left part END -->
						<!-- Side bar start -->
						<div class="col-lg-4 sticky-top">
							<aside class="side-bar sticky-top"></aside>
						</div>
						<!-- Side bar END -->
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Content END-->
{% endblock %}

{% block javascripts %}
	{{ parent()}}
	<script src="{{ asset ('js/infinityScroll/articlesInfinityScroll.js') }}" defer></script>
{% endblock %}
