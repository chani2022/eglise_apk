{% extends 'base.html.twig' %}

{% block title %}Apokalpsy -
	{{ type }}
{% endblock %}
{% block stylesheets %}
	{{parent()}}
	<style>
		.loading {
			display: flex;
			align-items: center;
			justify-content: center;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="breadcrumb-row">
		<div class="container">
			<ul class="list-inline">
				<li>
					<a href="#">Home</a>
				</li>
				<li>{{ type }}</li>
			</ul>
		</div>
	</div>


	<!-- Content -->
	<div
		class="page-content bg-white">
		<!-- contact area -->
		<div class="content-block">
			<div class="section-area section-sp1">
				<div class="container">
					<div
						class="row">
						<!-- Left part start -->
						<div
							class="col-lg-12" id="container" data-type="{{ type }}">{# {% for cal in articles %}
																<div class="blog-post blog-md clearfix item-article" id="{{ cal.id }}">
																	<div class="ttr-post-media">
																		<img src="{{ asset( 'article/' ~ cal.image ) }}"/>
																	</div>
																	<div class="ttr-post-info">
																		{% if type == "Calendrier d'évènement" %}
																			<ul class="media-post">
																				<li>
																					<a href="#">
																						<i class="fa fa-calendar"></i>Date d'évènement:
																						{{ cal.eventAt|date("d/m/Y") }}</a>
																				</li>
								
																			</ul>
																		{% endif %}
																		<h5 class="post-title">{{cal.titre}}</h5>
																		<p>
																			{{cal.commentaire|markdown_to_html}}
																		</p>
								
																		<div class="post-extra">
																			<a href="#" class="btn-link">Publié le:
																				<strong>{{ cal.createdAt|date("d/m/Y") }}</strong>
																			</a>
																			<a href="#" class="comments-bx">
																				<i class="fa fa-user"></i>Par
																				<strong>Cynthia</strong>
																			</a>
								
																		</div>
																	</div>
																</div>
															{% endfor %} #}


						</div>
						<div class="loading">
							<img src="{{ asset ('assets/images/spinner/spinner.gif') }}" class="spinner" alt="spinner"/>
						</div>
						<!-- Left part END -->
						<!-- Side bar start -->
						<div class="col-lg-4 sticky-top">
							<aside class="side-bar sticky-top"></aside>
						</div>
						<!-- Side bar END -->
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Content END-->
{% endblock %}

{% block javascripts %}
	{{ parent()}}
	<script src="{{ asset ('js/infinityScroll/articlesInfinityScroll.js') }}" defer></script>
{% endblock %}
